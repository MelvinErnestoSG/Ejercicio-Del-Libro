        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._01_Capitulos_1_al_3.Capitulos_2.Ejercicio_3"
        mc:Ignorable="d"
        Title="Capitulo2_Ejercicio3" Height="265" Width="550" WindowStartupLocation="CenterScreen">
