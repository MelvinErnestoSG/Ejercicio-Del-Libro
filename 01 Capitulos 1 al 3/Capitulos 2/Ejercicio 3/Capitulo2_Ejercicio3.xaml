        <StackPanel Margin="5">

            <Label Content="Grados:"/>
            <TextBox x:Name="GradosTextBox" HorizontalAlignment="Left" Width="80" Height="20"/>

            <Button x:Name="CalcularBoton" Content="Calcular" HorizontalAlignment="Left" Margin="0,10" Height="40" Width="60" Click="CalcularBoton_Click"/>

            <Label x:Name="ResultGradosLabel" Content="Resultado De los Centigrados:"/>
            <TextBox x:Name="ResultGradosTextBox" HorizontalAlignment="Left" Margin="0,5" Width="140"/>

            <Label x:Name="ResultRadianesLabel" Content="Resultado De Los Radianes:"/>
            <TextBox x:Name="ResultRadianesTextBox" HorizontalAlignment="Left" Margin="0,5" Width="140"/>
        </StackPanel>
    </Grid>
</Window>
