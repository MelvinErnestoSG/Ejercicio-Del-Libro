<Window x:Class="Ejercicio_Del_Libro_En_Wpf._01_Capitulos_1_al_3.Capitulos_2.Ejercicio_4.Capitulo2_Ejercicio4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._01_Capitulos_1_al_3.Capitulos_2.Ejercicio_4"
        mc:Ignorable="d"
        Title="Capitulo2_Ejercicio4" Height="261" Width="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">

            <Label Content="Grados:"/>
            <TextBox x:Name="CentigradosTextBox" HorizontalAlignment="Left" Width="80" Height="20"/>

            <Button x:Name="CalcularBoton" Content="Calcular" HorizontalAlignment="Left" Margin="0,10" Height="40" Width="60" Click="CalcularBoton_Click"/>

            <Label x:Name="ResultCentigradosLabel" Content="Resultado Del Centigrado:" Margin="0,0"/>
            <TextBox x:Name="ResultCentigradosTextBox" HorizontalAlignment="Left" Margin="0,5" Width="140"/>

            <Label x:Name="ResultFahrenheitLabel" Content="Resultado Del Fahrenheit:" Margin="0,0"/>
            <TextBox x:Name="ResultFahrenheitTextBox" HorizontalAlignment="Left" Margin="0,5" Width="160"/>
        </StackPanel>
    </Grid>
</Window>
