<Window x:Class="Ejercicio_Del_Libro_En_Wpf._03_Capitulos_6_y_7.Capitulos_6.Ejercicio_5.Capitulo6_Ejercicio5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._03_Capitulos_6_y_7.Capitulos_6.Ejercicio_5"
        mc:Ignorable="d"
        Title="Capitulo6_Ejercicio5" Height="142" Width="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">

            <StackPanel Orientation="Horizontal">
                <Label Content="Digite el numero:" Margin="0,5"/>
                <TextBox x:Name="CantidadTextBox" Margin="0,5" Width="75" Height="25"/>
                <Button x:Name="CalcularButton" Content="Mostrar" Margin="5,10" Padding="6" Click="CalcularButton_Click" Height="29"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="EL Parametro que pasa es el numero:" Margin="0,5"/>
                <TextBox x:Name="PromedioTextBox" Width="75" Height="25"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
