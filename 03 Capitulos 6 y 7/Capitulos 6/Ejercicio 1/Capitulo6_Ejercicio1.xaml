<Window x:Class="Ejercicio_Del_Libro_En_Wpf._03_Capitulos_6_y_7.Capitulos_6.Ejercicio_1.Capitulo6_Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._03_Capitulos_6_y_7.Capitulos_6.Ejercicio_1"
        mc:Ignorable="d"
        Title="Capitulo6_Ejercicio1" Height="290" Width="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">
          
            <Label Content="Digite Una Cantidad Para El Promedio:" Margin="0,5"/>
            <TextBox x:Name="CantidadTextBox" HorizontalAlignment="Left" Margin="0,5" Width="100"/>

            <Label Content="Digite El Numero Para El Promedio:" Margin="0,5"/>
            <TextBox x:Name="NumeroTextBox" HorizontalAlignment="Left" Margin="0,5" Width="100"/>

            <Label Content="EL Promedio es:" Margin="0,5"/>
            <TextBox x:Name="PromedioTextBox" HorizontalAlignment="Left" Margin="0,5" Width="100"/>

            <Button x:Name="CalcularButton" HorizontalAlignment="Left" Content="Calcular" Margin="0,10" Width="55" Height="30" Click="CalcularButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
