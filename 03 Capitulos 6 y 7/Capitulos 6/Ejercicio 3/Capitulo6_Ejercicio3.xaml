<Window x:Class="Ejercicio_Del_Libro_En_Wpf._03_Capitulos_6_y_7.Capitulos_6.Ejercicio_3.Capitulo6_Ejercicio3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._03_Capitulos_6_y_7.Capitulos_6.Ejercicio_3"
        mc:Ignorable="d"
        Title="Capitulo6_Ejercicio3" Height="303" Width="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">
          
            <Label Content="Digite un numero de dos cifras:" Margin="0,5"/>
            <TextBox x:Name="CantidadTextBox" HorizontalAlignment="Left" Width="100"/>

            <Label Content="Digite el Numero:" Margin="0,5"/>
            <TextBox x:Name="NumeroTextBox" HorizontalAlignment="Left" Width="100"/>

            <Label Content="El Resultado es:" Margin="0,5"/>
            <TextBox x:Name="PromedioTextBox" HorizontalAlignment="Left" Width="100"/>

            <Label Content="La Mayor Cantidad es:" Margin="0,5"/>
            <TextBox x:Name="MayorTextBox" HorizontalAlignment="Left" Width="100"/>

            <Button x:Name="CalcularButton" Content="Calcular" HorizontalAlignment="Left" Margin="0,10" Width="55"  Click="CalcularButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
