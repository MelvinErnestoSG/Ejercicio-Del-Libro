        <StackPanel Margin="5">
            
            <Label Content="Digite Un Numero:" HorizontalAlignment="Left" Margin="0,5"/>
            <TextBox x:Name="CantidadTextBox" HorizontalAlignment="Left" Width="120"/>

            <Label Content="Digite Otro Numero:" HorizontalAlignment="Left" Margin="0,5"/>
            <TextBox x:Name="CantidadTextBox2" HorizontalAlignment="Left" Width="120"/>

            <Label Content="EL Promedio es:" HorizontalAlignment="Left" Margin="0,5"/>
            <TextBox x:Name="PromedioTextBox" HorizontalAlignment="Left" Width="120"/>

            <Label Content="La Menor Cantidad es:" HorizontalAlignment="Left" Margin="0,5"/>
            <TextBox x:Name="MenorTextBox" HorizontalAlignment="Left" Width="120"/>

            <Button x:Name="CalcularButton" Content="Calcular" HorizontalAlignment="Left" Margin="0,10" Height="30" Width="52" Click="CalcularButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
