<Window x:Class="Ejercicio_Del_Libro_En_Wpf._02_Capitulos_4_y_5.Capitulos_5.Ejercicio_4.Capitulo5_Ejercicio4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._02_Capitulos_4_y_5.Capitulos_5.Ejercicio_4"
        mc:Ignorable="d"
        Title="Capitulo5_Ejercicio4" Height="104" Width="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">

            <StackPanel Orientation="Horizontal">
                <Label Content="Digite un numero:"/>
                <TextBox x:Name="numTextBox" HorizontalAlignment="Left" Margin="5,5,0,0" Width="100" Height="20"/>
                <Button x:Name="CalcularBoton" Content="Calcular" HorizontalAlignment="Left" Margin="5,5,0,0" Height="20" Width="50" Click="CalcularBoton_Click"/>
            </StackPanel> 
            
            <StackPanel Orientation="Horizontal">
                <Label Content="El Factorial Del Numero Ingresado Es:"/>
                <Label x:Name="FactorialLabel" Content="0" AutomationProperties.IsRequiredForForm="True"/>
            </StackPanel>
           
        </StackPanel>
    </Grid>
</Window>
