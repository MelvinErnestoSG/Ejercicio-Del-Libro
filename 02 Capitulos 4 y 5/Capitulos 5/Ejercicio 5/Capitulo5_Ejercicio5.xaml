<Window x:Class="Ejercicio_Del_Libro_En_Wpf._02_Capitulos_4_y_5.Capitulos_5.Ejercicio_5.Capitulo5_Ejercicio5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._02_Capitulos_4_y_5.Capitulos_5.Ejercicio_5"
        mc:Ignorable="d"
        Title="Capitulo5_Ejercicio5" Height="201" Width="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">

            <Label Content="Digite el numero que desea visualizar escrito:"/>

            <TextBox x:Name="NumeroTextBox" HorizontalAlignment="Left" Width="100" Height="24"/>

            <Label Content="El numero introducido se escribe:"/>

            <TextBox x:Name="ResultadoTextBox" HorizontalAlignment="Left" Width="100" Height="24"/>
            
            <Button x:Name="MostrarBoton" Content="Mostrar"  Margin="0,20,0,0" Height="25" Width="78" Click="MostrarBoton_Click"/>
        </StackPanel>
    </Grid>
</Window>
