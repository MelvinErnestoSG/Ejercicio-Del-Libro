<Window x:Class="Ejercicio_Del_Libro_En_Wpf._02_Capitulos_4_y_5.Capitulos_4.Ejercicio_2.Capitulo4_Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_Del_Libro_En_Wpf._02_Capitulos_4_y_5.Capitulos_4.Ejercicio_2"
        mc:Ignorable="d"
        Title="Capitulo4_Ejercicio2" Height="260" Width="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">

            <Label Content="Digite el numero que desea elevar:"/>
            <TextBox x:Name="CoeficienteTextBox" HorizontalAlignment="Left" Width="120" Height="20"/>
              
            <Label x:Name="ExponenteLabel" Content="Digite el exponente:" Margin="0,5"/>
            <TextBox x:Name="ExponenteTextBox" HorizontalAlignment="Left" Width="120"/>
            <Button x:Name="CalcularBoton" Content="Calcular" HorizontalAlignment="Left" Margin="0,10" Height="40" Width="60" Click="CalcularBoton_Click"/>

            <Label x:Name="ResultLabel" Content="Resultado:" Margin="0,0"/>
            <TextBox x:Name="ResultTextBox" HorizontalAlignment="Left" Margin="0,5" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
